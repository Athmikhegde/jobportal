<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp"
    app:cardMaxElevation="12dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    >

    <TextView
        android:id="@+id/titletxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:maxLines="1"
        android:text="Job Title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desctxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="85sp"
        android:maxLines="1"
        android:text="Description"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/skillstxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="125sp"
        android:maxLines="1"
        android:text="Skills"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/salarystxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="160sp"
        android:maxLines="1"
        android:text="Salary"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/linkstxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="195sp"
        android:autoLink="web"
        android:clickable="false"
        android:linksClickable="true"
        android:maxLines="1"
        android:text="Link"
        android:textColor="#006DFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/datetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="55sp"
        android:maxLines="1"
        android:text="29 July,2018"
        android:textColor="#006DFF"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="120dp"
        android:background="@color/white"
        app:srcCompat="@mipmap/ic_launcher_deletee"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/edit"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        app:srcCompat="@mipmap/ic_launcher_edit"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.cardview.widget.CardView>